{% extends "base.html.twig" %}

{% block title %}
	{{ gite.nom }}
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					{{ gite.nom }}
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-6">
			<table class="table">
				<tr>
					<td>Surface</td>
					<td>{{ gite.surface }}</td>
				</tr>
				<tr>
					<td>Chambres</td>
					<td>{{ gite.chambre }}</td>
				</tr>
				<tr>
					<td>Couchages</td>
					<td>{{ gite.couchage }}</td>
				</tr>
			</table>
		</div>
		<div class="col-6">
			<h2>Equipements</h2>
			<table class="table">
				{% for equipement in gite.equipements %}
					<tr>
						<td>{{ equipement.name }}</td>
					</tr>
				{% endfor %}
			</table>
		</div>
		<div class="container">
			<a href="/" class="btn btn-primary">Retour</a>
		</div>
	</div>

{% endblock %}
