{% extends 'base.html.twig' %}

{% block title %}Profil | Progica
{% endblock %}

{% block body %}

	<div class="jumbotron text-center">
		<h1>Votre profil</h1>
	</div>

	<div class="container">
		<p>
			<b>Nom :</b>
			{{ app.user.nom }}</p>
		<p>
			<b>Prénom :</b>
			{{ app.user.prenom }}</p>
		<p>
			<b>Pseudo :</b>
			{{ app.user.username }}</p>
		<p>
			<b>E-mail :</b>
			{{ app.user.email }}</p>
		<p>
			<b>Téléphone :</b>
			{{ app.user.phone }}</p>
		<p>
			<b>Adresse :</b>
			{{ app.user.adresse }}</p>
		<p>
			<b>Code postal :</b>
			{{ app.user.codeZip }}</p>
		<p>
			<b>Ville :</b>
			{{ app.user.ville }}</p>
	</div>
	<div class="container">
		<a href="{{ path('profil_edit', {id: app.user.id}) }}" class="btn btn-info">Modifier</a>
	</div>


{% endblock body %}
