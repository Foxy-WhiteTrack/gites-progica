{% extends 'base.html.twig' %}

{% block title %}Agence Progica
{% endblock %}

{% block body %}

	<div class="jumbotron text-center">
		<h1>L'Agence</h1>

		<div class="container">
			<div class="row">
				{{ form_start(form) }}
				<div class="car">
					<div class="card-body">
						<div class="row">
							<div class="col-3">
								{{ form_row(form.minSurface) }}</div>
							<div class="col-3">
								{{ form_row(form.minChambre) }}
							</div>
							<div class="col-3">
								{{ form_row(form.minCouchage) }}
							</div>
							<div class="col-3">
								{{ form_row(form.submit) }}</div>
						</div>

					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>

		<div class="container">
			<div class="row">

				{% for gite in gites %}
					<div class="col-4 mb-3">
						<div class="card">
							<img src="{{ asset('img/mountains.jpg') }}" class="card-img-top" alt="">
							<div class="card-body">
								<h5 class="card-title">{{ gite.nom }}</h5>
								<p class="card-text">
									{{ gite.description }}
									{{ gite.surface }}
									mÂ² -
									{{ gite.chambre }}
									ch -
									{{ gite.couchage }}
								</p>
								<a href="{{ path('gite_show', {id: gite.id}) }}" class="btn btn-primary">Voir</a>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>
	<div class="container"></div>


{% endblock body %}
