{% extends 'base.html.twig' %}

{% block title %}Agence Progica
{% endblock %}

{% block body %}

	<div class="jumbotron text-center">
		<h1>L'Agence</h1>


		<div class="container">
			<div class="row">

				{% for gite in gites %}
					<div class="col-4 mb-3">
						<div class="card">
							<img src="{{ asset('img/mountains.jpg') }}" class="card-img-top" alt="">
							<div class="card-body">
								<h5 class="card-title">{{ gite.nom }}</h5>
								<p class="card-text">
									{{ gite.description }}
									{{ gite.surface }}
									mÂ² -
									{{ gite.chambre }}
									ch -
									{{ gite.couchage }}
								</p>
								<p class="card-text">
									<b>{{ gite.ville }}</b>
								</p>
								<p class="card-text">
									tarif basse saison:
									{{ gite.tarifBasseSaison }}
									- 
																																												tarif basse saison:
									{{ gite.tarifHauteSaison }}
								</p>
								<a href="{{ path('gite_show', {id: gite.id}) }}" class="btn btn-primary">Voir</a>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>
	<div class="container"></div>


{% endblock body %}
