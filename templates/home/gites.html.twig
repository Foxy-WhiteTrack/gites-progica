{% extends 'base.html.twig' %}

{% block title %}Voir nos Gites
{% endblock %}

{% block body %}

	<div class="jumbotron text-center">
		<h1>L'Agence</h1>

		<div class="row">

			{% for gite in gites %}
				<div class="col-4">
					<div class="card">
						<img src="" class="card-img-top" alt="">
						<div class="card-body">
							<h5 class="card-title">{{ gite.nom }}</h5>
							<p class="card-text">{{ gite.description }}</p>
							<a href="{{ path('gite_show', {id: gite.id}) }}" class="btn btn-primary">Voir</a>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>
	<div class="container"></div>


{% endblock body %}
