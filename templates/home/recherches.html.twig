{% extends 'base.html.twig' %}

{% block title %}Recherches
{% endblock %}

{% block body %}


	<div class="row my-3">
		<div class="col-3">
			{{ form_start(form) }}
			<div class="card vh-100">
				<div class="card-body">

					{{ form_row(form.minSurface) }}


					{{ form_row(form.minChambre) }}


					{{ form_row(form.minCouchage) }}


					{{ form_row(form.equipement) }}


					{{ form_row(form.submit) }}

				</div>

			</div>

			{{ form_end(form) }}
		</div>
		<div class="col-9">
			<div class="row">
				{% for gite in gites %}
					<div class="col-4 mb-3">
						<div class="card">
							<img src="{{ asset('img/mountains.jpg') }}" class="card-img-top" alt="">
							<div class="card-body">
								<h5 class="card-title">{{ gite.nom }}</h5>
								<p class="card-text">
									{{ gite.description }}
									{{ gite.surface }}
									mÂ² -
									{{ gite.chambre }}
									ch -
									{{ gite.couchage }}
								</p>
								<a href="{{ path('gite_show', {id: gite.id}) }}" class="btn btn-primary">Voir</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>

		</div>

	</div>


{% endblock body %}
