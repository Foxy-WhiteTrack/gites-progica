{% endblock %}
{% block body %}

	<div class="container">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<h1>Contact
		</h1>
		<div class="row">
			<div class="col-md-6">
				{{ form_start(form) }}
				{{ form_rest(form) }}
